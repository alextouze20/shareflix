<div class="row align-items-center justify-content-around message-container">
  <div class="d-none authorid"><%= message.user.id %></div>
  <div class = "col-3">
    <% if message.user.photo.attached? %>
      <%= cl_image_tag message.user.photo.key,class: "message-avatar",  width: 50, crop: :fill if message.user.photo.attached? %>
    <% else %>
      <img class = "message-avatar" src="https://i0.wp.com/ahfirstaid.org/wp-content/uploads/2014/07/avatar-placeholder.png" alt="">
    <% end %>
  </div>
  <div class=" message col-8" id="message-<%= message.id %>">
    <i class="author">
      <span><%= message.user.first_name %></span>
      <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
    </i>
    <p><%= message.content %></p>
  </div>
</div>
