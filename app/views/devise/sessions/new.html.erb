<div class="d-flex justify-content-center align-items-center flex-column h-100" style="min-height: 90vh;">
  <div class="w-100">
    <h2 class="text-center border-login">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class="login-container">
      <div class="form-inputs login-form">
        <%= f.input :email,
                    label: false,
                    placeholder: "âœ‰ï¸ Email address",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: false,
                    placeholder: "ðŸ”’ Password",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions btn-login">
        <%= f.button :submit, "Next" %>
      </div>
    </div>
    <% end %>

  </div>


  <%= render "devise/shared/links" %>

</div>
